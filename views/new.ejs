<%include partials/header%>
<h1 style = "text-align: center">Create a new course</h1>
<div class = "container">
    <div class="row">
        <div style = "width: 30%; margin:30px auto;">
            <form action = "/knownager", method = "POST">
                <div class = "form-group"> 
                    <!--gives space between-->
                    <input class="form-control" type = "text" name = "name" placeholder = "course name">
                </div>
                <div class = "form-group">
                    <input class="form-control" type = "text" name = "description" placeholder = "course description">
                </div>
                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Submit!</button>
                </div>

            </form>
            <a href = "/knownager" >Go Back</a>
        </div>
    </div>
</div>
<%include partials/footer%>