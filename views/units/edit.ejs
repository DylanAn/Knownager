<%include ../partials/header%>
<div class = "container">
    <h1 style = "margin-top:auto">Edit Unit <%= unit.name%></h1>    
    <form action = "/courses/units/<%=unit._id%>?_method=PUT", method = "POST">
    <input style="width: 20%" class="form-control" type = "text" name = "unit[name]" value = "<%=unit.name%>" placeholder = "unit name">
</div>        
    <textarea style="width:80%;height:65%;margin-left:10%;margin-right:10%;font-size:16;margin-bottom:10;" row="70", cols="100" name = "unit[text]"><%=unit.text%></textarea>
        <div>
            <button style="width:20%;margin:0 auto" class = "btn btn-lg btn-primary btn-block">Update</button>
            <a style="width:15%;margin:1% auto;display:block;" role="button" class="btn btn-warning" href = "/courses/units/<%=unit.courseId%>" >Go Back</a> 
        </div>
    </form>
           

<%include ../partials/footer%>